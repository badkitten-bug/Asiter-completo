# Configuración del TDR Extractor
# Copia este archivo a .env y configura los valores

# Servidor
APP_NAME="TDR Extractor API"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Directorios
UPLOAD_DIR=uploads

# OCR Settings
# Ruta a Tesseract (dejar vacío para usar PATH)
TESSERACT_CMD=
OCR_LANGUAGE=spa

# LLM Settings - Modo Local vs API
# true = usar Ollama local
# false = usar DeepSeek API
USE_LOCAL_LLM=true

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:8b

# DeepSeek API (remoto)
DEEPSEEK_API_KEY=your-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Límites
MAX_FILE_SIZE_MB=50
MAX_PAGES=100
